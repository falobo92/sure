<div class="h-[300px] lg:h-[380px] bg-container shadow-border-xs rounded-2xl overflow-hidden relative">
  <%# Fondo decorativo con gradiente %>
  <div class="absolute inset-0 bg-gradient-to-br from-indigo-50/50 via-transparent to-violet-50/30 opacity-60"></div>
  
  <%# Patrón de fondo sutil %>
  <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle at 1px 1px, currentColor 1px, transparent 0); background-size: 24px 24px;"></div>
  
  <%# Elementos decorativos flotantes %>
  <div class="absolute top-8 left-8 w-16 h-16 rounded-2xl bg-gradient-to-br from-indigo-100 to-indigo-200/50 transform -rotate-12 opacity-60"></div>
  <div class="absolute bottom-12 right-12 w-20 h-20 rounded-full bg-gradient-to-br from-violet-100 to-violet-200/50 opacity-50"></div>
  <div class="absolute top-1/3 right-1/4 w-10 h-10 rounded-xl bg-gradient-to-br from-cyan-100 to-cyan-200/50 transform rotate-12 opacity-40"></div>
  
  <%# Contenido principal %>
  <div class="relative h-full flex flex-col items-center justify-center px-6 py-8">
    <%# Ilustración animada %>
    <div class="relative mb-6">
      <div class="w-24 h-24 rounded-3xl bg-gradient-to-br from-indigo-500 to-violet-600 flex items-center justify-center shadow-xl
                  transform hover:scale-105 transition-transform duration-300">
        <%= icon("wallet", size: "xl", class: "text-white") %>
      </div>
      
      <%# Badge flotante %>
      <div class="absolute -bottom-2 -right-2 w-10 h-10 rounded-xl bg-gradient-to-br from-green-400 to-emerald-500 flex items-center justify-center shadow-lg
                  animate-bounce">
        <%= icon("plus", size: "sm", class: "text-white") %>
      </div>
    </div>
    
    <%# Texto %>
    <div class="text-center space-y-2 mb-6 max-w-sm">
      <h3 class="text-xl font-bold text-primary"><%= t("pages.dashboard.no_accounts.title") %></h3>
      <p class="text-secondary text-sm leading-relaxed"><%= t("pages.dashboard.no_accounts.description") %></p>
    </div>
    
    <%# Botón de acción %>
    <%= render DS::Link.new(
      text: t("pages.dashboard.no_accounts.add_account"),
      icon: "plus",
      variant: "primary",
      href: new_account_path,
      frame: :modal,
      class: "shadow-lg hover:shadow-xl transition-shadow duration-300"
    ) %>
    
    <%# Indicadores de beneficios %>
    <div class="mt-8 flex flex-wrap justify-center gap-4 text-xs text-secondary">
      <span class="flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-surface-inset">
        <%= icon("shield-check", size: "xs", class: "text-green-500") %>
        Seguro
      </span>
      <span class="flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-surface-inset">
        <%= icon("zap", size: "xs", class: "text-yellow-500") %>
        Rápido
      </span>
      <span class="flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-surface-inset">
        <%= icon("bar-chart-2", size: "xs", class: "text-indigo-500") %>
        Analítico
      </span>
    </div>
  </div>
</div>
