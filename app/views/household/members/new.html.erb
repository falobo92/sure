<% content_for :page_header do %>
  <div class="mb-4">
    <h1 class="text-2xl font-bold text-primary">Nuevo Miembro</h1>
    <p class="text-secondary">Agrega un nuevo miembro al hogar</p>
  </div>
<% end %>

<div class="mb-4">
  <%= link_to household_members_path, class: "text-sm text-secondary hover:text-primary transition-colors flex items-center gap-1" do %>
    <%= icon("arrow-left", class: "w-4 h-4") %>
    Volver a Miembros
  <% end %>
</div>

<div class="bg-container rounded-xl p-6 shadow-border-xs max-w-lg">
  <%= render "form", member: @member %>
</div>

