<%# locals: (shared_expense:) %>
<%= form_with model: shared_expense,
  url: shared_expense.persisted? ? household_shared_expense_path(shared_expense, period: period_param) : household_shared_expenses_path(period: period_param),
  class: "space-y-4" do |f| %>

  <% if shared_expense.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-4 theme-dark:bg-red-900/20 theme-dark:border-red-800">
      <p class="font-medium text-red-700 theme-dark:text-red-300">Por favor corrige los siguientes errores:</p>
      <ul class="list-disc list-inside text-sm text-red-600 theme-dark:text-red-400 mt-2">
        <% shared_expense.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field">
    <%= f.label :household_member_id, "Pagado por", class: "form-field__label" %>
    <%= f.select :household_member_id,
      @members.map { |m| [m.display_name, m.id] },
      {},
      class: "form-field__input", required: true %>
  </div>

  <div class="form-field">
    <%= f.label :description, "DescripciÃ³n", class: "form-field__label" %>
    <%= f.text_field :description, class: "form-field__input", placeholder: "Ej: Supermercado, Gasolina, Cena", required: true %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="form-field">
      <%= f.label :amount_cents, "Monto", class: "form-field__label" %>
      <%= f.number_field :amount_cents, class: "form-field__input", min: 0, step: 1, placeholder: "50000", required: true %>
    </div>

    <div class="form-field">
      <%= f.label :currency, "Moneda", class: "form-field__label" %>
      <%= f.select :currency,
        [["CLP", "CLP"], ["USD", "USD"], ["EUR", "EUR"]],
        {},
        class: "form-field__input" %>
    </div>
  </div>

  <div class="form-field">
    <%= f.label :expense_date, "Fecha", class: "form-field__label" %>
    <%= f.date_field :expense_date, class: "form-field__input", required: true %>
  </div>

  <div class="flex items-center gap-3 p-3 bg-surface-inset rounded-lg">
    <%= f.check_box :shared, class: "checkbox checkbox--light w-5 h-5" %>
    <%= f.label :shared, class: "text-sm text-primary cursor-pointer" do %>
      <span class="font-medium">Gasto compartido</span>
      <span class="text-secondary block">Marca si este gasto debe dividirse entre los miembros del hogar</span>
    <% end %>
  </div>

  <div class="flex items-center justify-end gap-3 pt-4">
    <%= link_to "Cancelar", household_shared_expenses_path(period: period_param), class: "text-sm text-secondary hover:text-primary transition-colors" %>
    <%= f.submit shared_expense.persisted? ? "Actualizar" : "Crear Gasto", class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors cursor-pointer" %>
  </div>
<% end %>

