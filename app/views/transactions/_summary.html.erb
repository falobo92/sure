<%# locals: (totals:) %>
<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
  <%# Total de transacciones %>
  <div class="group relative bg-container rounded-xl shadow-border-xs p-5 overflow-hidden
              border border-transparent hover:border-tertiary
              transition-all duration-300 hover:shadow-border-md">
    <%# Fondo decorativo %>
    <div class="absolute top-0 right-0 w-24 h-24 opacity-5 transform translate-x-6 -translate-y-6">
      <%= icon("receipt", size: "xl", class: "w-full h-full text-indigo-500") %>
    </div>
    
    <div class="relative flex items-center gap-4">
      <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-indigo-tint-10 flex items-center justify-center
                  group-hover:scale-105 transition-transform duration-300">
        <%= icon("receipt", size: "md", class: "text-indigo-500") %>
      </div>
      <div>
        <p class="text-xs font-medium text-secondary uppercase tracking-wide">Total transacciones</p>
        <p class="text-2xl font-bold text-primary" id="total-transactions">
          <%= number_with_delimiter(totals.count.round(0)) %>
        </p>
      </div>
    </div>
  </div>
  
  <%# Ingresos %>
  <div class="group relative bg-container rounded-xl shadow-border-xs p-5 overflow-hidden
              border border-transparent hover:border-green-200
              transition-all duration-300 hover:shadow-border-md">
    <%# Fondo decorativo %>
    <div class="absolute top-0 right-0 w-24 h-24 opacity-5 transform translate-x-6 -translate-y-6">
      <%= icon("trending-up", size: "xl", class: "w-full h-full text-green-500") %>
    </div>
    
    <div class="relative flex items-center gap-4">
      <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-green-tint-10 flex items-center justify-center
                  group-hover:scale-105 transition-transform duration-300">
        <%= icon("trending-up", size: "md", class: "text-green-500") %>
      </div>
      <div>
        <p class="text-xs font-medium text-secondary uppercase tracking-wide">Ingresos</p>
        <p class="text-2xl font-bold text-green-600" id="total-income">
          <%= totals.income_money.format %>
        </p>
      </div>
    </div>
    
    <%# Barra de progreso visual %>
    <div class="mt-3 h-1 bg-surface-inset rounded-full overflow-hidden">
      <div class="h-full bg-gradient-to-r from-green-400 to-green-500 rounded-full transition-all duration-500"
           style="width: <%= [(totals.income_money.amount.to_f / [totals.income_money.amount + totals.expense_money.amount.abs, 1].max * 100), 100].min %>%"></div>
    </div>
  </div>
  
  <%# Gastos %>
  <div class="group relative bg-container rounded-xl shadow-border-xs p-5 overflow-hidden
              border border-transparent hover:border-red-200
              transition-all duration-300 hover:shadow-border-md">
    <%# Fondo decorativo %>
    <div class="absolute top-0 right-0 w-24 h-24 opacity-5 transform translate-x-6 -translate-y-6">
      <%= icon("trending-down", size: "xl", class: "w-full h-full text-red-500") %>
    </div>
    
    <div class="relative flex items-center gap-4">
      <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-red-tint-10 flex items-center justify-center
                  group-hover:scale-105 transition-transform duration-300">
        <%= icon("trending-down", size: "md", class: "text-red-500") %>
      </div>
      <div>
        <p class="text-xs font-medium text-secondary uppercase tracking-wide">Gastos</p>
        <p class="text-2xl font-bold text-red-600" id="total-expense">
          <%= totals.expense_money.format %>
        </p>
      </div>
    </div>
    
    <%# Barra de progreso visual %>
    <div class="mt-3 h-1 bg-surface-inset rounded-full overflow-hidden">
      <div class="h-full bg-gradient-to-r from-red-400 to-red-500 rounded-full transition-all duration-500"
           style="width: <%= [(totals.expense_money.amount.abs.to_f / [totals.income_money.amount + totals.expense_money.amount.abs, 1].max * 100), 100].min %>%"></div>
    </div>
  </div>
</div>
